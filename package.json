  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "packageManager": "npm@10",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "codegen": "graphql-codegen --config codegen.ts",
