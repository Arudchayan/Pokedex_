    "@tanstack/react-query-devtools": "^5.91.3",
    "@tanstack/react-virtual": "^3.13.18",
    "clsx": "^2.1.1",
    "html2canvas": "^1.4.1",
    "idb-keyval": "^6.2.2",
    "lz-string": "^1.5.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0",
    "vite-plugin-pwa": "^1.1.0",
    "zustand": "^5.0.11"
