# Environment Variables Example
# Copy this file to .env for local development

# API Configuration
VITE_POKEAPI_GRAPHQL_URL=https://beta.pokeapi.co/graphql/v1beta

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_ENABLE_ERROR_REPORTING=false

# Analytics
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# VITE_MIXPANEL_TOKEN=your_token_here

# Error Tracking
# VITE_SENTRY_DSN=your_sentry_dsn

# API Rate Limiting
VITE_API_TIMEOUT=30000
VITE_MAX_RETRIES=3

# App Configuration
VITE_POKEMON_PER_PAGE=24
VITE_TEAM_CAPACITY=6
VITE_MAX_COMPARISON=4

# Audio
VITE_DEFAULT_AUDIO_ENABLED=true
VITE_AUDIO_VOLUME=0.3

# Production
# Set to 'production' for production builds
NODE_ENV=development
